<% if @errors %>
  <% @errors.each do |error| %>
    <h2><%= error %></h2>
  <% end %>
<% end %>

<h1><%= purpose %> dragon:</h1>

<%= form_tag url, method: verb do %>
  <div class="form-group">
    Name: <input type="text" name="name", value="<%= @dragon.name %>">
  </div>
  <div>
    Price: <input type="integer" name="price", value="<%= @dragon.price %>">
  </div>
  <div>
    Description: <input type="text" name="description", value="<%= @dragon.description %>">
  </div>
  <div> 
    Color: <input type="text" name="color", value="<%= @dragon.color %>">
  </div>
  <div>
    Size: <input type="text" name="size", value="<%= @dragon.size %>">
  </div>
  <div>
    Amount in stock: <input type="text" name="amount", value="<%= @dragon.amount %>">
  </div>
  <div>
    Supplier:
    <select name="supplier_id">
      <% @suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>" name=":supplier_id"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" value="<%= purpose %> dragon">
<% end %>