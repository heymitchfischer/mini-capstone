<h1>Create a new dragon:</h1>

<%= form_tag "/dragons", method: :post do %>
  <div class="form-group">
    Name: <input type="text" name="name">
  </div>
  <div>
    Price: <input type="integer" name="price">
  </div>
  <div>
    Description: <input type="text" name="description">
  </div>
  <div>
    Image: <input type="text" name="image">
  </div>
  <div>
    How many spikes: <input type="integer" name="amount_spikes">
  </div>
  <div> 
    Color: <input type="text" name="color">
  </div>
  <div>
    Size: <input type="text" name="size">
  </div>
  <div>
    Supplier:
    <select name="supplier_id">
      <% @suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>" name=":supplier_id"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" value="create dragon">
<% end %>